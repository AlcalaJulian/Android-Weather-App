<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    android:padding="10dp"
    android:elevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/textItemCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_alignParentStart="true"
            android:layout_toEndOf="@id/textItemTemperature"/>

        <TextView
            android:id="@+id/textItemTemperature"
            android:layout_width="100dp"
            android:textSize="50sp"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />
        <TextView
            android:id="@+id/textItemHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textItemCity"
            android:layout_alignParentStart="true"
            android:layout_toEndOf="@id/textItemTemperature"/>

        <TextView
            android:id="@+id/textItemCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textItemTemperature"
            android:layout_alignParentStart="true"
            android:layout_toEndOf="@+id/textItemMaxMin"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/textItemMaxMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textItemTemperature"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
