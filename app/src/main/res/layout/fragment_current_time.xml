<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/textCity"
            android:layout_width="138dp"
            android:layout_height="24dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/imgTemperature"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.889" />

        <ImageView
            android:id="@+id/imgTemperature"
            android:layout_width="224dp"
            android:layout_height="121dp"
            android:contentDescription="@string/img_weather_desc"
            android:maxHeight="400dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.235"
             />

        <TextView
            android:id="@+id/textTemperature"
            android:layout_width="140dp"
            android:layout_height="74dp"
            android:text="@string/default_temperature"
            android:textAlignment="center"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgTemperature" />

        <TextView
            android:id="@+id/textCondition"
            android:layout_width="138dp"
            android:layout_height="24dp"
            android:text="@string/precipitation_text"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTemperature"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textMaxMin"
            android:layout_width="139dp"
            android:layout_height="25dp"
            android:text="@string/max_min"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textCondition"
            app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
